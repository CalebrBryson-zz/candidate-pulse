<div class="container">
	<h1> Candidate Pulse </h1>

	<div class="jumbotron">
		<%= pie_chart Candidate.group(:party).count %>
	</div>
	<div class="row">
		<center>
				<div class="input-group">
			      	<input type="text" class="form-control" placeholder="Enter a candidate name.">
			      	<span class="input-group-btn">
			        	<button class="btn btn-default" type="button">Search</button>
			      	</span>
			    </div><!-- /input-group -->
		</center>
	</div>

	<div class="row">
	 	<div class="col-md-4">
			<center>
				<h3> Republican </h3>
				<% @republicans.each do |candidate| %>
					<h4>
						<%= link_to candidate.name, candidate_path(candidate) %>
						<%= candidate.author.name %>
					</h4>

				<% end %>
			</center>
		</div>
	  <div class="col-md-4">
	  	<center>
				<h3> Democrats </h3>
				<% @democrats.each do |candidate| %>
				<h4>
					<%= link_to candidate.name, candidate_path(candidate) %>
					<%= candidate.author.name %>
				</h4>
				<% end %>
			</center>
	  </div>
	 	<div class="col-md-4">
			<center>
				<h3> Independent </h3>
				<% @independents.each do |candidate| %>
				<h4>
					<%= link_to candidate.name, candidate_path(candidate) %>
					<%= candidate.author.name %>
				</h4>
				<% end %>
			</center>

	</div>
</div>

</div>

<div class="jumbotron">
	<ol>
	<% @mostpostitive.each do |candidate| %>

		<li><h4> <%= candidate.name %> </h4>
			 <%= candidate.positivity %>
		</li>

	<% end %>
	</ol>
</div>
