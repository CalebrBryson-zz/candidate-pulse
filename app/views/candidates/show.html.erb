<div class="container">
	<h1>Candidate Name</h1>

	<h1><%= @candidate.name %> </h1>
    <div class="row">
             <h3>
                <%= link_to "Top 10 Favorited Tweets", {:controller => "candidates",
									 :action => "favorite_tweets", :candidate => @candidate.id } %>
            </h3>
    </div>
    <div class="row">
             <h3>
                <%= link_to "Top 10 Negative Keywords", {:controller => "candidates",
									 :action => "negative_keywords", :candidate => @candidate.id } %>
            </h3>
    </div>
    <div class="row">
             <h3>
                <%= link_to "Top 10 Most Positive Keywords", {:controller => "candidates",
									 :action => "positive_keywords", :candidate => @candidate.id } %>
            </h3>
    </div>
    <div class="row">
             <h3>
                <%= link_to "Top 30 Most Used Keywords", {:controller => "candidates",
									 :action => "most_used_keywords", :candidate => @candidate.id }%>
            </h3>
    </div>

	<ul>
		<% @tweets.each do |tweet| %>
				<li>
							<%= tweet.text %>
				</li>
		<% end %>
	</ul>
</div>
